<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="penduduk.sipepen.StatistikPenduduk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#fff">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tablelayout"
        android:layout_marginTop="10dp">

        <TableRow
            android:id="@+id/rowlay"
            android:background="@color/colorAccent"
            android:padding="5dp" >
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:text="No"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Keterangan"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Jumlah"/>
            </TableRow>

        <TableRow
            android:background="#eceff1"
            android:id="@+id/row1"
            android:padding="10dp" >
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:text="1"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="gravity"
                android:text="Jumlah Penduduk"/>
            <TextView
                android:id="@+id/b1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:background="#eceff1"
            android:id="@+id/row2"
            android:padding="10dp" >
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:text="2"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="gravity"
                android:text="Jumlah Keluarga"/>
            <TextView
                android:id="@+id/b2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:background="#eceff1"
            android:id="@+id/row3"
            android:padding="10dp" >
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:text="3"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="gravity"
                android:text="Jumlah Laki-laki"/>
            <TextView
                android:id="@+id/b3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:background="#eceff1"
            android:id="@+id/row4"
            android:padding="10dp" >
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:text="4"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="gravity"
                android:text="Jumlah Perempuan"/>
            <TextView
                android:id="@+id/b4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:background="#eceff1"
            android:id="@+id/row5"
            android:padding="10dp" >
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:text="5"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="gravity"
                android:text="Jumlah Penduduk Meninggal"/>
            <TextView
                android:id="@+id/b5"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center" />
        </TableRow>

    </TableLayout>
</RelativeLayout>